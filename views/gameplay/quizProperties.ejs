<!DOCTYPE html>
<html lang="en">
    <%- include("../components/head/head.ejs") %>
    <body>
        <script>
            function redirectToQuiz() {
                sessionStorage.setItem("score", 0);
                window.location.href = window.location.href + "/0";
            }
        </script>
        <div>
            <header><%- include("../components/header/header.ejs") %></header>
            <div class="pageContent">
                <div class="quizProperties">
                    <div class="card">
                        <h1><%= quiz.name %></h1>
                        <p><%= quiz.description %></p>
                        <div>
                            <p class="small">Difficulty: <%= quiz.difficulty %></p>
                            <p class="small">By: <%= quiz.creator %></p>
                        </div>
                        <button onclick="redirectToQuiz()">Play quiz</button>
                    </div>
                </div>
            </div>
            <footer><%- include("../components/footer/footer.ejs") %></footer>
        </div>
        </div>
    </body>
</html>
