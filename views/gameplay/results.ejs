<!DOCTYPE html>
<html lang="en">
    <%- include("../components/head/head.ejs") %>
    <body>
        <div>
            <header><%- include("../components/header/header.ejs") %></header>
            <div class="pageContent">
                <div class="results">
                    <div class="progressBar"></div>
                    <h3></h3>
                </div>
            </div>
            <script>
                const questions = "<%= quiz.questions.length %>";
                document.querySelector(
                    "h3"
                ).innerHTML = `Congratulations you've got ${Math.round(
                    (sessionStorage.score / questions) * 100
                )}% of the questions right!`;
                document.querySelector(
                    ".progressBar"
                ).innerHTML = `<progress class="pbar" value="${
                    sessionStorage.score
                }" max=${"<%= quiz.questions.length %>"}>`;
            </script>
            <footer><%- include("../components/footer/footer.ejs") %></footer>
        </div>
    </body>
</html>
